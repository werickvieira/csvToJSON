{
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "extends": "airbnb-base",
  "rules": {
    "no-use-before-define": [1, { "variables": true }],
    "no-continue": [1],
    "no-param-reassign": [2, {"props": false}],
    "comma-dangle": ["error", "always-multiline", {
      "functions": "never"
    }],
    "function-paren-newline": ["error", "consistent"]
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "globals": {
    "URL": true
  }
}
